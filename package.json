    "eslint": "^9.22.0",
    "fast-check": "^3.23.2",
    "prettier": "^3.5.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8"
  }
